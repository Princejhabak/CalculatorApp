<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#B3E5FC">
">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="textEnd"
            android:id="@+id/tv1"
            android:layout_weight="2"
            android:fontFamily="sans-serif-light"
            android:textColor="#4FC3F7"
            android:background="#263238"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:textSize="40dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv1"
            android:textAlignment="textEnd"
            android:fontFamily="sans-serif-light"
            android:id="@+id/tv2"
            android:layout_weight="2"
            android:paddingTop="25dp"
            android:paddingRight="20dp"
            android:background="#263238"
            android:textColor="#9E9E9E"
            android:textSize="25dp"
            android:text=""/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/tv2"
                android:layout_alignParentLeft="true"
                android:text="C"
                android:textColor="#FFFFFF"
                android:layout_weight="2"
                android:textSize="32dp"
                android:fontFamily="sans-serif-light"
                android:background="#4FC3F7"
                android:layout_marginRight="1dp"
                android:id="@+id/b1"
                android:onClick="b_clear"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/tv2"
                android:layout_toRightOf="@id/b1"
                android:fontFamily="sans-serif-light"
                android:text="DEL"
                android:background="#4FC3F7"
                android:layout_marginRight="1dp"
                android:layout_weight="2"
                android:textSize="32dp"
                android:textColor="#FFFFFF"
                android:id="@+id/b2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/tv2"
                android:layout_toRightOf="@id/b2"
                android:text="%"
                android:id="@+id/b3"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:layout_marginRight="1dp"
                android:layout_weight="2"
                android:textSize="32dp"
                android:background="#4FC3F7" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/tv2"
                android:layout_toRightOf="@id/b3"
                android:text="/"
                android:fontFamily="sans-serif-light"
                android:layout_alignParentRight="true"
                android:textSize="32dp"
                android:textColor="#FFFFFF"
                android:id="@+id/b4"
                android:background="#29B6F6"
                android:layout_weight="2"
                android:onClick="b_div"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/b1"
                android:layout_alignParentLeft="true"
                android:text="7"
                android:fontFamily="sans-serif-light"
                android:textSize="35dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:id="@+id/b5"
                android:background="#FFFFFF"
                android:layout_weight="2"
                android:onClick="b7"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/b2"
                android:layout_toRightOf="@id/b5"
                android:text="8"
                android:textSize="35dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/b6"
                android:background="#FFFFFF"
                android:layout_weight="2"
                android:onClick="b8"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/b3"
                android:layout_toRightOf="@id/b6"
                android:text="9"
                android:textSize="35dp"
                android:id="@+id/b7"
                android:layout_marginRight="1dp"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="1dp"
                android:background="#FFFFFF"
                android:layout_weight="2"
                android:onClick="b9"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/b4"
                android:layout_toRightOf="@id/b7"
                android:text="X"
                android:layout_marginTop="1dp"
                android:layout_alignParentRight="true"
                android:id="@+id/b8"
                android:textSize="32dp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:background="#29B6F6"
                android:layout_weight="2"
                android:onClick="b_mul"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/b5"
                android:fontFamily="sans-serif-light"
                android:layout_alignParentLeft="true"
                android:text="4"
                android:textSize="35dp"
                android:id="@+id/b9"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:background="#FFFFFF"
                android:layout_weight="2"
                android:onClick="b4"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-light"
                android:layout_below="@id/b6"
                android:layout_toRightOf="@id/b9"
                android:text="5"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:id="@+id/b10"
                android:textSize="35dp"
                android:background="#FFFFFF"
                android:layout_weight="2"
                android:onClick="b5"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/b7"
                android:layout_toRightOf="@id/b10"
                android:text="6"
                android:id="@+id/b11"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:background="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:layout_weight="2"
                android:textSize="35dp"
                android:onClick="b6"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/b8"
                android:layout_toRightOf="@id/b11"
                android:text="-"
                android:layout_marginTop="1dp"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-light"
                android:id="@+id/b12"
                android:textColor="#FFFFFF"
                android:textSize="32dp"
                android:background="#29B6F6"
                android:layout_weight="2"
                android:onClick="b_sub"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">





            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/b9"
                android:layout_alignParentLeft="true"
                android:text="1"
                android:textSize="35dp"
                android:background="#FFFFFF"
                android:id="@+id/b13"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:fontFamily="sans-serif-light"
                android:layout_weight="2"
                android:onClick="b1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/b10"
                android:layout_toRightOf="@id/b13"
                android:text="2"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:id="@+id/b14"
                android:textSize="35dp"
                android:fontFamily="sans-serif-light"
                android:background="#FFFFFF"
                android:layout_weight="2"
                android:onClick="b2"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/b11"
                android:layout_toRightOf="@id/b14"
                android:text="3"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:id="@+id/b15"
                android:textSize="32dp"
                android:background="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:layout_weight="2"
                android:onClick="b3"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/b12"
                android:layout_toRightOf="@id/b15"
                android:text="+"
                android:layout_marginTop="1dp"
                android:fontFamily="sans-serif-light"
                android:layout_alignParentRight="true"
                android:id="@+id/b16"
                android:textSize="32dp"
                android:textColor="#FFFFFF"
                android:background="#29B6F6"
                android:layout_weight="2"
                android:onClick="b_add"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/b13"
                android:layout_alignParentLeft="true"
                android:text="."
                android:fontFamily="sans-serif-light"
                android:textSize="35dp"
                android:background="#FFFFFF"
                android:id="@+id/b17"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="2" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/b14"
                android:layout_toRightOf="@id/b17"
                android:fontFamily="sans-serif-light"
                android:text="0"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:id="@+id/b18"
                android:background="#FFFFFF"
                android:layout_weight="2"
                android:textSize="35dp"
                android:onClick="b0"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/b15"
                android:layout_toRightOf="@id/b18"
                android:text="^"
                android:textColor="#29B6F6"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/b19"
                android:background="#FFFFFF"
                android:layout_weight="2"
                android:textSize="32dp"
                android:onClick="b_pow"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/b16"
                android:layout_toRightOf="@id/b19"
                android:layout_alignParentRight="true"
                android:text="="
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="1dp"
                android:id="@+id/b20"
                android:textSize="32dp"
                android:background="#29B6F6"
                android:layout_weight="2"
                android:onClick="b_equal"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

